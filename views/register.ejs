<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            justify-content: center;
            align-items: center;
        }

        .background-image {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        h1 {
            font-family: Andale, monospace;
            font-size: 47px;
            margin-top: -15px;
        }

        form label {
            margin-top: -19px;
            font-family: Impact, monospace;
            font-size: 20px;
            display: block;
            margin-bottom: 2px;
            margin-right: 215px;
        }

        form input {
            width: 82%;
            padding: 10px;
            margin-bottom: 21px;
            margin-top: 2px;
            font-size: 16px;
        }

        form button {
            width: 32%;
            padding: 8px;
            border-color: black;
            border-radius: 10px;
            background-color: #578591;
            color: black;
            font-size: 17px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: -25px;
        }

        form button:hover {
            background-color: #7ba4b6;
        }

        .login-container {
            text-align: center;
            background-color: #FFFFFFCC;
            padding: 20px;
            border-radius: 10px;
            box-shadow: #00000019;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 340px;
            height: 340px;
        }

        .message {
            background-color: rgba(255, 0, 0, 0.8); /* Прозрачный красный фон */
            color: white; /* Белый текст */
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            margin-top: 10px;
        }

        footer {
            margin-top: auto;
            background-color: #FFFFFF66;
            text-align: center;
            font-style: italic;
            border-top: 1px solid #cccccc;
            width: 100%;
            height: 43px;
        }

        .error-message {
            display: none; /* Сначала скрыть сообщение */
            color: red;
        }
    </style>
</head>
<body>
<img src="/pics/pic2.jpg" alt="Background Image" class="background-image">
<% if (message) { %>
    <div class="message"><%= message %></div>
<% } %>
<div class="login-container">
    <h1>Registration Page</h1>
    <div class="error-message" id="error-message"></div>
    <form action="/register" method="POST" onsubmit="return validateForm()">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required><br><br>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required><br><br>
        <button type="submit">Register</button>
    </form>
</div>

<footer>
    <p>Omar Marzhan SE-2230</p>
</footer>
<script>
    function validateForm() {
        // Получить значение введенного имени пользователя
        var username = document.getElementById("username").value;

        // Отправить запрос на сервер для проверки существования имени пользователя
        // Ваш код проверки наличия имени пользователя здесь
        // Предположим, что у вас есть переменная isUsernameExists, которая указывает, существует ли имя пользователя
        var isUsernameExists = false; // Заглушка - замените на реальную проверку

        if (isUsernameExists) {
            // Если имя пользователя существует, показать сообщение об ошибке
            document.getElementById("error-message").innerText = "This username already exists.";
            document.getElementById("error-message").style.display = "block";
            return false; // Остановить отправку формы
        } else {
            // Если имя пользователя не существует, отправить форму
            return true;
        }
    }
</script>
</body>
</html>
